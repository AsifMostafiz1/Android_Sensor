<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="#689C9CA5"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:weightSum="4"
        android:paddingBottom="10dp"
        >
        <TextView
            android:layout_marginBottom="5dp"
            android:background="#136978"
            android:textSize="20sp"
            android:textColor="@color/white"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:gravity="center"
            android:text="Sensor Current Values">

        </TextView>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:padding="5dp"
            >

            <androidx.cardview.widget.CardView
                android:id="@+id/lightCard"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:paddingBottom="5dp"
                android:paddingTop="5dp"
                app:cardCornerRadius="10dp"
                android:elevation="10dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <TextView
                        android:layout_width="120dp"
                        android:gravity="center"
                        android:text="Light Sensor"
                        android:textSize="18dp"
                        android:textColor="#036F9F"
                        android:textStyle="bold"
                        android:layout_height="match_parent">

                    </TextView>

                    <View
                        android:layout_marginTop="25dp"
                        android:layout_marginBottom="25dp"
                        android:layout_width="1dp"
                        android:layout_height="match_parent"
                        android:background="#E27B7B7E">

                    </View>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:weightSum="1"
                        android:paddingLeft="10dp"
                        android:orientation="vertical"
                        android:gravity="center">


                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:textColor="@color/black"
                            android:text="ValueX: "
                            android:id="@+id/lightX">

                        </TextView>

                        <TextView
                            android:paddingTop="15dp"
                            android:textColor="@color/black"
                            android:paddingBottom="15dp"
                            android:layout_width="match_parent"
                            android:id="@+id/lightY"
                            android:layout_height="wrap_content"
                            android:text="ValueY: ">

                        </TextView>

                        <TextView
                            android:layout_width="match_parent"
                            android:textColor="@color/black"
                            android:id="@+id/lightZ"
                            android:layout_height="wrap_content"
                            android:text="ValueZ: ">

                        </TextView>




                    </LinearLayout>

                </LinearLayout>



            </androidx.cardview.widget.CardView>

        </LinearLayout>




        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:padding="5dp"
            >

            <androidx.cardview.widget.CardView
                android:id="@+id/prximityCard"
                app:cardCornerRadius="10dp"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:elevation="10dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <TextView
                        android:layout_width="120dp"
                        android:gravity="center"
                        android:text="Proximity Sensor"
                        android:textSize="18dp"
                        android:textColor="#036F9F"
                        android:textStyle="bold"
                        android:layout_height="match_parent">

                    </TextView>
                    <View
                        android:layout_marginTop="25dp"
                        android:layout_marginBottom="25dp"
                        android:layout_width="1dp"
                        android:layout_height="match_parent"
                        android:background="#E27B7B7E">

                    </View>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:weightSum="1"
                        android:orientation="vertical"
                        android:gravity="center"
                        android:paddingLeft="10dp">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:textColor="@color/black"
                            android:text="ValueX: "
                            android:id="@+id/proximityX">

                        </TextView>

                        <TextView
                            android:paddingTop="15dp"
                            android:id="@+id/proximityY"
                            android:textColor="@color/black"
                            android:paddingBottom="15dp"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="ValueY: ">

                        </TextView>

                        <TextView
                            android:layout_width="match_parent"
                            android:id="@+id/proximityZ"
                            android:textColor="@color/black"
                            android:layout_height="wrap_content"
                            android:text="ValueZ: ">

                        </TextView>

                    </LinearLayout>

                </LinearLayout>



            </androidx.cardview.widget.CardView>

        </LinearLayout>




        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:padding="5dp"
            >

            <androidx.cardview.widget.CardView
                android:id="@+id/accumulatorCard"
                app:cardCornerRadius="10dp"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:elevation="10dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <TextView
                        android:layout_width="120dp"
                        android:gravity="center"
                        android:text="Accumulator Sensor"
                        android:textSize="18dp"
                        android:textColor="#036F9F"
                        android:textStyle="bold"
                        android:layout_height="match_parent">

                    </TextView>
                    <View
                        android:layout_marginTop="25dp"
                        android:layout_marginBottom="25dp"
                        android:layout_width="1dp"
                        android:layout_height="match_parent"
                        android:background="#E27B7B7E">

                    </View>


                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:gravity="center"
                        android:orientation="vertical"
                        android:paddingLeft="10dp"
                        android:weightSum="1">

                        <TextView
                            android:layout_width="match_parent"
                            android:id="@+id/accumulatorX"
                            android:layout_height="wrap_content"
                            android:textColor="@color/black"
                            android:text="ValueX: ">

                        </TextView>

                        <TextView
                            android:id="@+id/accumulatorY"
                            android:paddingTop="15dp"
                            android:textColor="@color/black"
                            android:paddingBottom="15dp"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="ValueY: ">

                        </TextView>

                        <TextView
                            android:id="@+id/accumulatorZ"
                            android:layout_width="match_parent"
                            android:textColor="@color/black"
                            android:layout_height="wrap_content"
                            android:text="ValueZ: ">

                        </TextView>


                    </LinearLayout>

                </LinearLayout>



            </androidx.cardview.widget.CardView>

        </LinearLayout>




        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:padding="5dp"
            >

            <androidx.cardview.widget.CardView
                android:id="@+id/gyroscopeCard"
                app:cardCornerRadius="10dp"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:elevation="10dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <TextView
                        android:layout_width="120dp"
                        android:gravity="center"
                        android:text="Gyroscope sensor"
                        android:textSize="18dp"
                        android:textColor="#036F9F"
                        android:textStyle="bold"
                        android:layout_height="match_parent">

                    </TextView>
                    <View
                        android:layout_marginTop="25dp"
                        android:layout_marginBottom="25dp"
                        android:layout_width="1dp"
                        android:layout_height="match_parent"
                        android:background="#E27B7B7E">

                    </View>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:weightSum="1"
                        android:orientation="vertical"
                        android:gravity="center"
                        android:paddingLeft="10dp">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:textColor="@color/black"
                            android:text="ValueX: "
                            android:id="@+id/gyroscopeX">

                        </TextView>

                        <TextView
                            android:id="@+id/gyroscopeY"
                            android:paddingTop="15dp"
                            android:textColor="@color/black"
                            android:paddingBottom="15dp"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="ValueY: ">

                        </TextView>

                        <TextView
                            android:id="@+id/gyroscopeZ"
                            android:layout_width="match_parent"
                            android:textColor="@color/black"
                            android:layout_height="wrap_content"
                            android:text="ValueZ: ">

                        </TextView>

                    </LinearLayout>

                </LinearLayout>



            </androidx.cardview.widget.CardView>

        </LinearLayout>



    </LinearLayout>


</LinearLayout>